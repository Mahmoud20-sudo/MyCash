<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp"
    tools:showIn="@layout/fragment_reports">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:background="@drawable/bg_white_r12_s1_stroke60_ripple"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp">

        <TextView
            android:id="@+id/total_sales_word_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="8dp"
            android:fontFamily="@font/regular"
            android:text="@string/total_sales"
            android:textColor="@color/primaryColorDark"
            android:textSize="12sp"
            app:drawableStartCompat="@drawable/ic_chart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/total_sales_date_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/regular"
            android:text="مايو 2022"
            android:textColor="@color/mainBlack40"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/total_sales_word_textView" />

        <TextView
            android:id="@+id/total_sales_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bg_gold_r100"
            android:fontFamily="@font/semi_bold"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:text="2000 SAR"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:background="@drawable/bg_white_r12_s1_stroke60_ripple"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp">

        <TextView
            android:id="@+id/cash_payments_word_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="8dp"
            android:fontFamily="@font/regular"
            android:text="@string/cash_payments"
            android:textColor="@color/primaryColorDark"
            android:textSize="12sp"
            app:drawableStartCompat="@drawable/ic_wallet_money_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cash_payments_date_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/regular"
            android:text="مايو 2022"
            android:textColor="@color/mainBlack40"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cash_payments_word_textView" />

        <TextView
            android:id="@+id/cash_payments_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bg_gold_r100"
            android:fontFamily="@font/semi_bold"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:text="2000 SAR"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:background="@drawable/bg_white_r12_s1_stroke60_ripple"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp">

        <TextView
            android:id="@+id/e_payments_word_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="8dp"
            android:fontFamily="@font/regular"
            android:text="@string/e_payments"
            android:textColor="@color/primaryColorDark"
            android:textSize="12sp"
            app:drawableStartCompat="@drawable/ic_card_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/e_payments_date_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/regular"
            android:text="مايو 2022"
            android:textColor="@color/mainBlack40"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/e_payments_word_textView" />

        <TextView
            android:id="@+id/e_payments_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bg_gold_r100"
            android:fontFamily="@font/semi_bold"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:text="2000 SAR"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:background="@drawable/bg_white_r12_s1_stroke60_ripple"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp">

        <TextView
            android:id="@+id/total_futures_bills_word_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="8dp"
            android:fontFamily="@font/regular"
            android:text="@string/total_futures_bills"
            android:textColor="@color/primaryColorDark"
            android:textSize="12sp"
            app:drawableStartCompat="@drawable/ic_card_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/total_futures_bills_date_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/regular"
            android:text="مايو 2022"
            android:textColor="@color/mainBlack40"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/total_futures_bills_word_textView" />

        <TextView
            android:id="@+id/total_futures_bills_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bg_gold_r100"
            android:fontFamily="@font/semi_bold"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:text="2000 SAR"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>

    
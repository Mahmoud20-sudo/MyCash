<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="24dp"
    android:layout_margin="4dp"
    android:background="@drawable/bg_white_r12_s1_stroke60_ripple"
    android:paddingVertical="16dp">

    <TextView
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/expenses_price_textView"
        android:id="@+id/title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:text="@string/expense"
        android:textAlignment="viewStart"
        android:textColor="@color/mainBlack"
        android:textSize="12sp"
        android:drawablePadding="8dp"
        android:maxLines="2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:drawableStartCompat="@drawable/ic_money_send" />

    <TextView
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:id="@+id/expenses_price_textView"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_primary60_r100"
        android:fontFamily="@font/semi_bold"
        android:paddingHorizontal="8dp"
        android:paddingVertical="2dp"
        tools:text="2000 SAR"
        android:textColor="@color/whiteText"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_below="@id/title_textView"
        android:id="@+id/date_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/regular"
        android:lines="1"
        android:textAlignment="viewStart"
        android:textColor="@color/mainBlack60"
        android:textSize="11sp"
        tools:text="21/08/2021/2, 02:22 AM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_textView"/>

</RelativeLayout>
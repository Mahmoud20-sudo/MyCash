<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/branch_card"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp">

    <LinearLayout

        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_s1_main_ripple"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingTop="12sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_imageView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:contentDescription="@string/content_description_item_type_image"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/title_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/regular"
                android:lines="1"
                android:textAlignment="viewStart"
                android:textColor="@color/mainBlack"
                android:textSize="12sp"
                tools:text="@string/expenses" />

            <ImageView

                android:id="@+id/more_imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/content_description_item_type_image"
                android:paddingHorizontal="5dp"
                android:paddingVertical="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_more"
                app:tint="@color/mainBlack" />


        </LinearLayout>


        <TextView
            android:id="@+id/sub_title_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/regular"
            android:lines="1"
            android:textAlignment="viewStart"
            android:textColor="@color/mainBlack"
            android:textSize="12sp"
            tools:text="@string/expenses" />

        <TextView
            android:id="@+id/code_title_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/regular"
            android:lines="1"
            android:textAlignment="viewStart"
            android:textColor="@color/mainBlack"
            android:textSize="12sp"
            tools:text="59156560" />

        <LinearLayout

            android:id="@+id/receipt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="8dp"
            android:background="#0D404041"
            android:clickable="false"
            android:elevation="2dp"
            android:focusable="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/receipt_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:fontFamily="@font/regular"
                android:lines="1"
                android:paddingVertical="8dp"
                android:textAlignment="viewStart"
                android:textColor="@color/mainBlack80"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/ic_green_medal"
                tools:text="فرع  نشط" />


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
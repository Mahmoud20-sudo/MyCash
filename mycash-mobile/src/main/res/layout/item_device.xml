<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:id="@+id/device_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_r12_s2_stroke_ripple"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/device_imageView"
                android:layout_width="83dp"
                android:layout_height="72dp"
                android:contentDescription="@string/content_description_device_image"
                android:scaleType="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/device_desc_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/regular"
                    android:gravity="center|start"
                    android:maxLines="2"
                    android:textColor="@color/mainBlack60"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/device_company_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/regular"
                    android:gravity="center|start"
                    android:textColor="@color/mainBlack60"
                    android:textSize="11sp" />


            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#99E8E8E8" />

        <LinearLayout
            android:id="@+id/receipt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:elevation="2dp"
            android:focusable="false"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:fontFamily="@font/semi_bold"
                android:lines="1"
                android:paddingVertical="8dp"
                android:text="@string/package_price"
                android:textAlignment="viewStart"
                android:textColor="@color/secondaryColor"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/ic_money_4" />

            <TextView
                android:id="@+id/package_price_textView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_weight="1"
                android:gravity="center|end"
                android:drawablePadding="8dp"
                android:fontFamily="@font/semi_bold"
                android:lines="1"
                android:clickable="false"
                android:paddingHorizontal="4dp"
                android:paddingVertical="8dp"
                android:textColor="@color/secondaryColor"
                android:textSize="20sp"
                tools:text="222" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@drawable/bg_pdf_section"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingBottom="8dp"
    app:layout_constraintTop_toBottomOf="@id/title_en_textView"
    tools:showIn="@layout/pdf_tax_bill">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:text="@string/seller_information"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <TextView
            style="@style/pdf_sub_text"
            android:layout_weight="30"
            android:text="@string/seller_name_en"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/seller_name_en_textView"
            style="@style/pdf_sub_text"
            android:layout_weight="25"
            android:text="myCash"
            android:textAlignment="viewStart" />


        <TextView
            android:id="@+id/seller_name_ar_textView"
            style="@style/pdf_sub_text"
            android:layout_weight="25"
            android:text="ماي كاش"
            android:textAlignment="viewEnd" />

        <TextView
            style="@style/pdf_sub_text"
            android:layout_weight="30"
            android:text="@string/seller_name_ar"
            android:textAlignment="viewEnd" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <TextView
            style="@style/pdf_sub_text"
            android:layout_weight="30"
            android:text="@string/seller_address_en"
            android:textAlignment="viewStart" />


        <TextView
            android:id="@+id/seller_address_en_textView"
            style="@style/pdf_sub_text"
            android:layout_weight="25"
            android:text="Northern Ring Exit 8, Riyadh, Saudi Arabia 13253"
            android:textAlignment="viewStart" />


        <TextView
            android:id="@+id/seller_address_ar_textView"
            style="@style/pdf_sub_text"
            android:layout_weight="25"
            android:text="الدائري الشمالي مخرج 8، الرياض، المملكة العربية السعودية 13253"
            android:textAlignment="viewEnd" />

        <TextView
            style="@style/pdf_sub_text"
            android:layout_weight="30"
            android:text="@string/seller_address_ar"
            android:textAlignment="viewEnd" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <TextView
            style="@style/pdf_sub_text"
            android:layout_weight="30"
            android:text="@string/seller_vat_no_en"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/seller_vat_no_en_textView"
            style="@style/pdf_sub_text"
            android:layout_weight="25"
            android:text="20005516655515"
            android:textAlignment="viewStart" />


        <TextView
            android:id="@+id/seller_vat_no_ar_textView"
            style="@style/pdf_sub_text"
            android:layout_weight="25"
            android:text="20005516655515"
            android:textAlignment="viewEnd" />

        <TextView
            style="@style/pdf_sub_text"
            android:layout_weight="30"
            android:text="@string/seller_vat_no_ar"
            android:textAlignment="viewEnd" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <TextView
            style="@style/pdf_sub_text"
            android:layout_weight="30"
            android:text="@string/cr_no_en"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/cr_no_en_textView"
            style="@style/pdf_sub_text"
            android:layout_weight="25"
            android:text="0201000"
            android:textAlignment="viewStart" />


        <TextView
            android:id="@+id/cr_no_ar_textView"
            style="@style/pdf_sub_text"
            android:layout_weight="25"
            android:text="0201000"
            android:textAlignment="viewEnd" />

        <TextView
            style="@style/pdf_sub_text"
            android:layout_weight="30"
            android:text="@string/cr_no_ar"
            android:textAlignment="viewEnd" />

    </LinearLayout>

</LinearLayout>
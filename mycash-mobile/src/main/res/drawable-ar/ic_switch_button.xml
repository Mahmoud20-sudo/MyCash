<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:bottom="@dimen/switch_thumb_padding" android:left="@dimen/switch_thumb_padding" android:top="@dimen/switch_thumb_padding">
                <shape android:shape="rectangle" android:useLevel="false" android:visible="true">
                    <corners android:radius="20dp" />
                    <solid android:color="@color/transparent" />
                    <size android:width="@dimen/switch_thumb_size" android:height="@dimen/switch_thumb_size" />
                    <stroke android:width="2dp" android:color="@color/secondaryColor40" />
                </shape>
            </item>

        </layer-list>

    </item>
    <item android:state_checked="false">
        <layer-list>
            <item android:bottom="@dimen/switch_thumb_padding" android:right="@dimen/switch_thumb_padding" android:top="@dimen/switch_thumb_padding">
                <shape android:shape="rectangle" android:useLevel="false" android:visible="true">
                    <corners android:radius="20dp" />
                    <solid android:color="@color/transparent" />
                    <size android:width="@dimen/switch_thumb_size" android:height="@dimen/switch_thumb_size" />
                    <stroke android:width="2dp" android:color="@color/mainBlack40" />
                </shape>
            </item>

        </layer-list>
    </item>
</selector>
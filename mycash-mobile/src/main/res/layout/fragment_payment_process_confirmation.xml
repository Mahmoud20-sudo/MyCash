<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingVertical="24dp"
    tools:context="com.codeIn.myCash.ui.home.products.payment_process_confimation.PaymentProcessConfirmationFragment">

    <ImageView
        android:id="@+id/back_arrow"
        style="@style/back_arrow"
        android:contentDescription="@string/content_description_back_arrow"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintBottom_toBottomOf="@id/title_textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/title_textView" />

    <TextView
        android:id="@+id/title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/regular"
        android:text="@string/process"
        android:textColor="@color/mainBlack"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="56dp"
        android:layout_weight="1"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_top_sheet"
        android:rotation="180"
        app:layout_constraintBottom_toTopOf="@id/invoice_summary_layout"
        app:layout_constraintTop_toBottomOf="@id/title_textView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:elevation="2dp"
        android:gravity="center"
        android:text="PDF"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@id/invoice_summary_layout"
        app:layout_constraintTop_toBottomOf="@id/title_textView" />

    <LinearLayout
        android:id="@+id/invoice_summary_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/regular"
            android:text="@string/invoice_summary"
            android:textAlignment="viewStart"
            android:textColor="@color/mainBlack"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/regular"
                android:text="@string/invoice_number"
                android:textAlignment="viewStart"
                android:textColor="@color/mainBlack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/invoice_number_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/semi_bold"
                android:lines="1"
                android:textAlignment="viewEnd"
                android:textColor="@color/mainBlack"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/regular"
                android:text="@string/initial_total"
                android:textAlignment="viewStart"
                android:textColor="@color/mainBlack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/initial_total_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/semi_bold"
                android:lines="1"
                android:textAlignment="viewEnd"
                android:textColor="@color/mainBlack"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/regular"
                android:text="@string/vat_15"
                android:textAlignment="viewStart"
                android:textColor="@color/mainBlack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/vat_15_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/semi_bold"
                android:lines="1"
                android:textAlignment="viewEnd"
                android:textColor="@color/mainBlack"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/regular"
                android:text="@string/discount"
                android:textAlignment="viewStart"
                android:textColor="@color/mainBlack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/discount_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/semi_bold"
                android:lines="1"
                android:textAlignment="viewEnd"
                android:textColor="@color/mainBlack"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/regular"
                android:text="@string/payment_method"
                android:textAlignment="viewStart"
                android:textColor="@color/mainBlack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/payment_method_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/semi_bold"
                android:lines="1"
                android:textAlignment="viewEnd"
                android:textColor="@color/mainBlack"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/regular"
                android:text="@string/total"
                android:textAlignment="viewStart"
                android:textColor="@color/mainBlack"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/total_price_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/semi_bold"
                android:lines="1"
                android:textAlignment="viewEnd"
                android:textColor="@color/primaryColor"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/pay_invoice_Button"
                style="@style/big_button_Style"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:text="@string/pay_invoice"
                app:backgroundTint="@null" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/back_Button"
                style="@style/big_button_Style_secondary"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="@string/back"
                app:backgroundTint="@null" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:paddingHorizontal="16dp"
    android:addStatesFromChildren="true"
    android:background="@drawable/selector_bg_edittext"
    >
    <TextView
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:drawablePadding="10dp"
        android:elevation="0dp"
        android:text="@string/add_category"
        android:textSize="12sp"
        android:paddingStart="10dp"
        android:paddingEnd="8dp"
        android:contentDescription="@string/add_new_category"
        android:id="@+id/addCategory"
        android:fontFamily="@font/regular"
        android:layout_gravity="center"
        android:gravity="center|start"
        android:textColor="@drawable/selector_category"
        android:layout_height="wrap_content"
        app:drawableStartCompat="@drawable/selector_drawer_category" />

    <ImageView
        android:id="@+id/close"
        android:paddingStart="8dp"
        android:layout_gravity="center"
        android:paddingTop="8dp"
        android:visibility="gone"
        android:paddingBottom="8dp"
        android:paddingEnd="8dp"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:src="@drawable/close_add_category"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="24dp"
        android:background="@color/stroke60"
        android:layout_gravity="start|center" />

    <AutoCompleteTextView
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:inputType="textPersonName"
        android:background="@android:color/transparent"
        android:layout_gravity="center"
        android:gravity="center|start"
        android:padding="16dp"
        android:textSize="12sp"
        android:hint="@string/product_category"
        android:fontFamily="@font/regular"
        android:textAlignment="viewStart"
        android:textColor="@color/mainBlack"
        android:textColorHint="@color/mainBlack30"
        android:completionThreshold="1"
        android:dropDownVerticalOffset="8dp"
        />

</LinearLayout>
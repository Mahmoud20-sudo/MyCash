<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/reportFilterTv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_17sdp"
        android:background="@drawable/bg_main_black_r50_s1"
        android:ellipsize="end"
        android:fontFamily="@font/bill_regular"
        android:gravity="center"
        android:maxLength="20"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/_9sdp"
        android:text="@string/mainReports"
        android:textColor="@color/mainBlack"
        android:textSize="@dimen/_11sdp"
        app:drawableEndCompat="@drawable/ic_arrow_down_main_black"
        app:drawableStartCompat="@drawable/ic_box"
        app:layout_constraintBottom_toBottomOf="@+id/dateTypeFilterTv"
        app:layout_constraintEnd_toStartOf="@+id/dateTypeFilterTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dateTypeFilterTv" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dateTypeFilterTv"
        android:layout_width="0dp"
        android:layout_height="@dimen/_41sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_17sdp"
        android:background="@drawable/bg_main_black_r50_s1"
        android:fontFamily="@font/bill_regular"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/_9sdp"
        android:text="@string/select_date_type"
        android:textColor="@color/mainBlack"
        android:textSize="@dimen/_11sdp"
        app:drawableEndCompat="@drawable/ic_arrow_down_main_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/reportFilterTv"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:background="@color/mainBlack5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateTypeFilterTv" />

</androidx.constraintlayout.widget.ConstraintLayout>
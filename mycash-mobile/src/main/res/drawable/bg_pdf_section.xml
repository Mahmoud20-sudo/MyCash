<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/whiteText" />
            whiteText
            <stroke
                android:width="1dp"
                android:color="@color/mainBlack40" />
        </shape>
    </item>
    <item
        android:gravity="top"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <size android:height="27dp" />
            <solid android:color="#E2E2E3" />
            <corners
                android:topLeftRadius="12dp"
                android:topRightRadius="12dp" />
        </shape>
    </item>
</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginStart="49dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="49dp"
    android:background="@color/white"
    android:orientation="vertical"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <TextView
                style="@style/settings_text_item"
                android:padding="16dp"
                android:text="@string/show_more"
                android:textAlignment="center"
                android:textColor="@color/mainBlack60"
                android:textSize="14sp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/total_user_sales_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"
            android:fontFamily="@font/regular"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"
            android:text="@string/total_user_sales"
            android:textAlignment="center"
            android:textColor="@color/mainBlack70"
            android:textSize="14sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/stroke30" />

        <TextView
            android:id="@+id/user_activities_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"
            android:fontFamily="@font/regular"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"
            android:text="@string/user_activities"
            android:textAlignment="center"
            android:textColor="@color/mainBlack70"
            android:textSize="14sp" />


    </LinearLayout>


</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginStart="449dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="49dp"
    android:background="@drawable/bg_white_r12_s1_stroke60"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="12dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingVertical="18dp">

            <TextView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/regular"
                android:text="@string/delete_product"
                android:textColor="@color/mainBlack60"
                android:textSize="14sp" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="16dp"
        android:fontFamily="@font/regular"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp"
        android:text="@string/delete_product_desc"
        android:textAlignment="center"
        android:textColor="@color/mainBlack70"
        android:textSize="14sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirm_Button"
            style="@style/big_button_Style"
            android:layout_width="90dp"
            android:layout_marginStart="20dp"
            android:text="@string/agree"
            android:background="@drawable/bg_primary_r100_ripple"
            android:textColor="@color/white"
            app:backgroundTint="@null"
            app:cornerRadius="100dp"
            app:layout_constraintEnd_toStartOf="@id/cancel_Button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_Button"
            style="@style/big_button_Style"
            android:layout_width="90dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_white_r100_s1_secondary_ripple"
            android:text="@string/cancel"
            android:textColor="@color/primaryColor"
            app:backgroundTint="@null"
            app:cornerRadius="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/confirm_Button"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
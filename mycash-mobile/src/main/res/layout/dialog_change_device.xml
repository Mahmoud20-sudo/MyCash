<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginStart="48dp"
    android:layout_height="wrap_content"
    android:background="@drawable/header_dialog_home"
    android:elevation="3dp"
    android:backgroundTint="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="48dp"
    android:layout_gravity="center"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/currentDeviceTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:drawableStart="@drawable/current_device"
        android:drawablePadding="16dp"
        android:textSize="14sp"
        android:fontFamily="@font/semi_bold"
        android:textColor="@color/mainBlack60"
        android:layout_gravity="center|start"
        android:gravity="bottom|center|start"
        android:text="@string/changeDevice"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1AD1D3D4"
        />

    <TextView
        android:id="@+id/chooseNewDevice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:drawableStart="@drawable/new_device"
        android:drawablePadding="16dp"
        android:textSize="14sp"
        android:fontFamily="@font/semi_bold"
        android:textColor="@color/mainBlack60"
        android:layout_gravity="center|start"
        android:gravity="bottom|center|start"
        android:text="@string/new_device"/>

</LinearLayout>

